<h1>Question: <%= @question.title %></h1>
<h2>Question-Content: <%= @question.content %></h2>
<h2>Answers</h2>
<% @question.answers.each do |answer| %>
  <p>Title</p>
  <p><%= answer.title %></p>
  <p>Content</p>
  <p><%= answer.content %></p>
  <hr />
<% end %>
<%= link_to 'Back', questions_path %>
