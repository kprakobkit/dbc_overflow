var $currentDiv = "div#" + "<%= (@answer.id) %>";
var currentElementVoteCount = parseInt(<%= @answer.vote %>);
var nextElementVoteCount = function(){ return parseInt($($currentDiv).next().attr("data-vote-count"))};
var previousElementVoteCount = function(){ return parseInt($($currentDiv).prev().attr("data-vote-count"))};

$($currentDiv).attr("data-vote-count", "<%= @answer.vote %>");
$("#" + "<%= (@answer.id) %>" + " .vote").text("Vote: " + "<%= (@answer.vote) %>");
while (currentElementVoteCount > previousElementVoteCount()) {
  $($currentDiv).insertBefore($($currentDiv).prev());
}
