<div id="<%= answer.id %>" data-vote-count="<%= answer.vote %>">
<p>Title</p>
<p><%= answer.title %></p>
<p>Content</p>
<p><%= answer.content %></p>
<p class="vote">Vote: <%= answer.vote %></p>
<%= link_to 'Upvote', upvote_question_answer_path(@question, answer), remote: true, method: :patch %>
<%= link_to 'Downvote', downvote_question_answer_path(@question, answer), remote: true, method: :patch %>
<hr />
</div>
